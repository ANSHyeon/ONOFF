<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <View
        android:id="@+id/area_place_info"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/shape_black_stroke_white_rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_place_name"
        style="@style/TextBody16"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/area_place_info"
        app:layout_constraintTop_toTopOf="@id/area_place_info"
        tools:text="에버랜드" />

    <TextView
        android:id="@+id/tv_place_adress"
        style="@style/TextBody12"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/area_place_info"
        app:layout_constraintTop_toBottomOf="@id/tv_place_name"
        tools:text="경기 화성시 병점3로 74" />

    <Button
        android:id="@+id/btn_enter_chat_room"
        style="@style/EnterButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:enabled="true"
        app:layout_constraintBottom_toBottomOf="@id/area_place_info"
        app:layout_constraintEnd_toEndOf="@id/area_place_info"
        app:layout_constraintStart_toStartOf="@id/area_place_info"
        tools:text="생성하기" />

</merge>