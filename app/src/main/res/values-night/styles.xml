<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Button Style  -->
    <style name="SubmitButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_background_submit_button_night</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textAppearance">@style/TextTitle18.Bold</item>
    </style>

    <style name="EnterButton" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="backgroundTint">@color/green60</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textAppearance">@style/TextBody16.Bold</item>
    </style>

    <style name="LogOutButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_grey_rounded_rectangle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextTitle18.Bold</item>
    </style>

    <!--  ToolBar Style  -->
    <style name="ToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/background</item>
        <item name="titleTextAppearance">@style/TextTitle18.Bold</item>
        <item name="titleTextColor">@color/body</item>

    </style>

    <!--  BottomNavigation Style  -->
    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/background</item>
        <item name="android:visibility">gone</item>
        <item name="itemActiveIndicatorStyle">@color/grey</item>
        <item name="itemIconTint">@drawable/selector_background_navigation_menu_night</item>
        <item name="itemRippleColor">@color/grey</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <!--  ImageView Style  -->
    <style name="Rounded10">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>

    <!--  Text Style  -->
    <style name="TextTitle18" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/body</item>
    </style>

    <style name="TextTitle18.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBody16" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/body</item>
    </style>

    <style name="TextBody16.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBody14" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBody12" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBody12.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBody8" parent="TextBody12">
        <item name="android:textSize">8sp</item>
    </style>

</resources>